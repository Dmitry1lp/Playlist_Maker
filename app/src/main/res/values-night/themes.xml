<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.PlaylistMaker" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary -->
        <item name="colorPrimary">@color/black</item>          <!-- синий фон -->
        <item name="colorPrimaryVariant">@color/white</item>   <!-- Темный фиолетовый -->
        <item name="colorOnPrimary">@color/black</item>             <!-- Белый текст -->

        <!-- Secondary -->
        <item name="colorSecondary">@color/white</item>          <!-- Белый -->
        <item name="colorSecondaryVariant">@color/teal_700</item>   <!-- Темный бирюзовый -->
        <item name="colorOnSecondary">@color/black</item>           <!-- Черный текст -->

        <!-- Система -->
        <item name="android:statusBarColor">?attr/colorOnSecondary</item>
    </style>
</resources>
