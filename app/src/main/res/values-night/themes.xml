<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.PlaylistMaker" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary -->
        <item name="colorPrimary">@color/black</item>          <!-- синий фон -->
        <item name="colorPrimaryVariant">@color/white</item>   <!-- Темный фиолетовый -->
        <item name="colorOnPrimary">@color/black</item>             <!-- Белый текст -->
        <item name="colorOnBackground">@color/white</item>
        <item name="colorOnSurface">@color/white</item>
        <item name="colorOnPrimaryContainer">@color/white</item>

        <!-- Secondary -->
        <item name="colorSecondary">@color/white</item>          <!-- Белый -->
        <item name="colorSecondaryVariant">@color/black</item>   <!-- Темный  -->
        <item name="colorOnSecondary">@color/black</item>           <!-- Черный текст -->

        <!-- Система -->
        <item name="android:statusBarColor">?attr/colorPrimary</item>
    </style>
</resources>
