<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="MessageTextStyle">
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">26sp</item>
    </style>
    <style name="ButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">24dp</item>
        <item name="android:paddingRight">24dp</item>
        <item name="android:paddingBottom">16dp</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:gravity">center</item>
        <item name="android:backgroundTint">?attr/colorSecondary</item>
        <item name="android:textColor">?attr/colorOnSecondary</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">8dp</item>
        <item name="cornerRadius">8dp</item>
        <item name="iconTint">?attr/colorOnSecondary</item>
    </style>
    <style name="TextAppearance.ToolbarTitle.Normal" parent="@style/TextAppearance.Material3.TitleLarge">
        <item name="android:textStyle">normal</item>
        <item name="iconTint">?attr/colorOnSecondary</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="fontFamily">@font/ys_display_medium</item>
        <item name="android:textColor">?attr/colorOnSecondary</item>
        <item name="android:textSize">@dimen/activity_text_size</item>
    </style>
    <style name="MainStyle" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:letterSpacing">0</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:backgroundTint">?attr/colorSecondary</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">?attr/colorOnSecondary</item>
        <item name="android:textSize">@dimen/activity_text_size</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="cornerRadius">@dimen/radiusSize</item>
        <item name="iconGravity">textStart</item>
        <item name="iconTint">?attr/colorOnSecondary</item>
    </style>
    <style name="SettingViews">
        <item name="android:orientation">horizontal</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingTop">@dimen/radiusSize</item>
        <item name="android:paddingStart">@dimen/radiusSize</item>
        <item name="android:paddingBottom">@dimen/radiusSize</item>
    </style>
    <style name="SettingText">
        <item name="android:textColor">?attr/colorOnPrimaryContainer</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textSize">@dimen/setting_text</item>
        <item name="android:gravity">center_vertical</item>
    </style>
    <style name="AudioTextView1">
        <item name="android:textColor">@color/light_search_bar</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textSize">@dimen/audio_text_size</item>
        <item name="android:gravity">start</item>
    </style>
    <style name="AudioTextView2">
        <item name="android:textColor">?attr/colorPrimaryVariant</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textSize">@dimen/audio_text_size</item>
        <item name="android:gravity">end</item>
    </style>
    <style name="TextViewTime">
        <item name="android:textColor">?attr/colorPrimaryVariant</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">@dimen/refresh_text</item>
    </style>

    <style name="TextViewTrack">
        <item name="android:textColor">?attr/colorPrimaryVariant</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">@dimen/activity_text_size</item>
    </style>

    <style name="SearchEText">
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/activity_search</item>
        <item name="android:maxLength">16</item>
        <item name="android:maxLines">1</item>
        <item name="drawableTint">?attr/colorSecondaryVariant</item>
        <item name="android:drawablePadding">@dimen/medium_padding</item>
        <item name="android:layout_marginStart">@dimen/radiusSize</item>
        <item name="android:layout_marginEnd">@dimen/radiusSize</item>
        <item name="android:background">?attr/colorOnBackground</item>
        <item name="android:textSize">@dimen/setting_text</item>
        <item name="android:textColor">?attr/colorOnSecondary</item>
        <item name="android:textColorHint">?attr/colorSecondaryVariant</item>
    </style>
    <style name="SearchIcon">
        <item name="android:layout_width">@dimen/radiusSize</item>
        <item name="android:layout_height">@dimen/radiusSize</item>
        <item name="android:layout_marginEnd">@dimen/edit_search</item>
        <item name="android:src">@drawable/clear_button</item>
        <item name="android:visibility">gone</item>
        <item name="tint">?attr/colorSecondaryVariant</item>
    </style>
    <style name="RefreshIcon" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:text">@string/refresh</item>
        <item name="android:letterSpacing">0</item>
        <item name="backgroundTint">?attr/colorOnPrimaryContainer</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:textSize">@dimen/refresh_text</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="cornerRadius">@dimen/radiusSize</item>
        <item name="iconGravity">textStart</item>
        <item name="iconTint">?attr/colorOnSecondary</item>
        <item name="rippleColor">?attr/colorControlHighlight</item>


    </style>
</resources>